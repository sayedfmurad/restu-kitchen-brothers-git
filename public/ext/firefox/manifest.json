{
  "manifest_version": 2.1,
  "name": "Borderify",
  "version": "2.1",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "permissions": ["notifications"],
  "content_scripts": [
    {
      "matches": ["*://*.telegram.org/*"],
      "js": ["background.js"]
    }
  ]
}
  